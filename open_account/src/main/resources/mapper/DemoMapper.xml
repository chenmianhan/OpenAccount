<?xml version="1.0" encoding="UTF-8"?>
        <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
                "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.shixun.open_account.dao.DemoDao">
    <insert id="addDemo" >
        insert into demo(id,name,age) values(#{id}, #{name}, #{age})
    </insert>
    <select id="getDemo" resultType="com.alibaba.fastjson.JSONObject">
        SELECT
        d.name name,
        d.age age,
        d.id id
        FROM
        demo d
        WHERE d.id = #{id}
    </select>
    <update id="updateDemo" >
        UPDATE demo d
        <set>
            d.name = #{name},
           d.age = #{age},
            d.id = #{id}
        </set>
        WHERE  d.id=#{id};
    </update>
</mapper>